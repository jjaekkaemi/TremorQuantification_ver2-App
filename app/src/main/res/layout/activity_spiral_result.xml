<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpiralResultActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="30dp">


                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Primary"
                    android:text="Freqeuncy Analysis"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />
                <!--android:layout_marginTop="50sp"-->
                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/chart2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Primary"
                    android:text="Fitting ratio Analysis"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="20sp" />

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/chart3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="10">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1">


            <TextView
                android:layout_width="0dip"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:background="@color/Fourth"
                android:gravity="bottom"
                android:padding="10dp"
                android:lineSpacingExtra="10dp"
                android:text="@string/crts_b_12" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">


                <RadioButton
                    android:id="@+id/crts14_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Fourth"
                    android:text="0"/>

                <RadioButton
                    android:id="@+id/crts14_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Fourth"
                    android:text="1"/>

                <RadioButton
                    android:id="@+id/crts14_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Fourth"
                    android:text="2"/>

                <RadioButton
                    android:id="@+id/crts14_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Fourth"
                    android:text="3"/>

                <RadioButton
                    android:id="@+id/crts14_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Fourth"
                    android:text="4"/>
            </RadioGroup>


            <FrameLayout
                android:layout_width="0dip"
                android:layout_weight="5"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Gosurvey"
                    android:layout_margin="10dp"
                    android:layout_width="200dp"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|right"
                    android:layout_height="wrap_content"
                    android:text="TEST 끝내기" />
            </FrameLayout>


        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>