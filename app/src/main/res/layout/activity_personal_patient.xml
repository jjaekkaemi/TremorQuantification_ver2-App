<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalPatient">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back_button" />

        <TextView
            android:id="@+id/patientclinicID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Clinic_ID"
            android:textSize="30dp" />

        <Button
            android:id="@+id/findButton"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="500dp"
            android:background="@drawable/find" />

        <Button
            android:id="@+id/dotButton"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/menu" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="5dp" />

    <TextView
        android:id="@+id/patientClinicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PatientName"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="121dp"
            android:layout_height="47dp"
            android:background="@drawable/select"
            android:text="UPDRS"
            android:textColor="#37BFA7" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="121dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/nonselect"
            android:text="CRTS"
            android:textColor="#ffffff"></Button>

        <Button
            android:id="@+id/bt3"
            android:layout_width="121dp"
            android:layout_height="51dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/nonselect"
            android:text="Spiral Task"
            android:textColor="#ffffff" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blank" />
</LinearLayout>